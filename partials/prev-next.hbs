<div class="prev-nex-wrap">
    <div class="row">
        <div class="col-md-6">
            {{#next_post}}
            <div class="post prev-post">
                <a href="{{url}}" class="flex">
                    {{#if feature_image}}
                    <div class="featured-image">
                        <img src="{{img_url feature_image size="xxs"}}" loading="lazy" alt="{{title}}">
                    </div>
                    {{/if}}
                    <div class="content-wrap">
                        <div class="nav-text">{{t "Newer article"}}</div>
                        <h4 class="title h5">{{title}}</h4>
                        <div class="post-meta">
                            <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                            <span class="read-time">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
                        </div>
                    </div>
                </a>
            </div>
            {{/next_post}}
        </div>
